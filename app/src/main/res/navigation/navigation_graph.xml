<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_graph"
            app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment"
              android:name="br.com.soluevo.cobrei.application.modules.login.LoginFragment"
              android:label="login_fragment"
              tools:layout="@layout/login_fragment">
        <action android:id="@+id/toAccount"
                app:destination="@id/accountFragment"/>
    </fragment>

    <fragment android:id="@+id/accountFragment"
              android:name="br.com.soluevo.cobrei.application.modules.account.AccountFragment"
              android:label="fragment_account"
              tools:layout="@layout/fragment_account">
        <action android:id="@+id/action_accountFragment_to_nameFragment" app:destination="@+id/nameFragment"
                app:popUpToInclusive="false"/>
    </fragment>

    <fragment android:id="@+id/nameFragment"
              android:name="br.com.soluevo.cobrei.application.modules.account.NameFragment"
              android:label="fragment_name"
              tools:layout="@layout/fragment_name">
        <argument android:name="nameArg"
                  app:argType="string"/>
    </fragment>
</navigation>