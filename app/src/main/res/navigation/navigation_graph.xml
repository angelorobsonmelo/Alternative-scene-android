<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_graph"
            app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment"
              android:name="br.com.soluevo.cobrei.application.modules.login.LoginFragment"
              android:label="login_fragment"
              tools:layout="@layout/login_fragment">
        <action android:id="@+id/toSettings"
                app:destination="@id/settingsFragment"/>
        <action android:id="@+id/ToAccount"
                app:destination="@id/accountFragment"/>
    </fragment>

    <fragment android:id="@+id/settingsFragment"
              android:name="br.com.soluevo.cobrei.SettingsFragment"
              android:label="fragment_settings"
              tools:layout="@layout/fragment_settings"/>

    <fragment android:id="@+id/accountFragment"
              android:name="br.com.soluevo.cobrei.AccountFragment"
              android:label="fragment_account"
              tools:layout="@layout/fragment_account">
        <action android:id="@+id/action_accountFragment_to_nameFragment" app:destination="@+id/nameFragment"
                app:popUpToInclusive="false"/>
    </fragment>

    <fragment android:id="@+id/nameFragment"
              android:name="br.com.soluevo.cobrei.NameFragment"
              android:label="fragment_name"
              tools:layout="@layout/fragment_name">
        <argument android:name="nameArg"
                  app:argType="string"/>
    </fragment>
</navigation>