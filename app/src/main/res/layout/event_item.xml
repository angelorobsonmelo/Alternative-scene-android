<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="event" type="br.com.angelorobson.alternativescene.domain.Event"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/eventImageView"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    tools:src="@drawable/heavy_metal_default"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="30dp"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewDataTime" android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDataTime"
                    android:text="@{event.title}"
                    tools:text="22 JUN, 23:00"
                    android:textColor="@color/cyan" android:textStyle="italic"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@+id/eventImageView"
                    app:layout_constraintStart_toEndOf="@+id/eventImageView" android:layout_marginEnd="167dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:id="@+id/eventTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{event.title}"
                    tools:text="Maceió Metal"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDataTime"
                    app:layout_constraintStart_toStartOf="@+id/textViewDataTime" android:layout_marginTop="8dp"/>
            <TextView
                    android:id="@+id/localTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{event.locality.name}"
                    tools:text="Oracúlo Choperria" android:textStyle="italic"
                    app:layout_constraintStart_toEndOf="@+id/eventImageView"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/eventImageView"/>


            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/shareImageView"
                    android:src="@drawable/ic_share_24dp"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dp"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat"
                    app:riv_oval="true"
                    android:layout_height="22dp" android:layout_width="22dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/eventImageView" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/eventImageView"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/favoriteImageView"
                    android:src="@drawable/ic_favorite_border_24dp"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dp"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="repeat"
                    app:riv_oval="true" android:layout_height="20dp" android:layout_width="21dp"
                    app:layout_constraintTop_toTopOf="@+id/shareImageView"
                    app:layout_constraintStart_toEndOf="@+id/shareImageView" android:layout_marginStart="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/shareImageView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>