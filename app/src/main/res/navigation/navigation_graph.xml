<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation_graph"
        app:startDestination="@id/eventsFragment">
    <fragment
            android:id="@+id/eventsFragment"
            android:name="br.com.angelorobson.alternativescene.application.partials.events.events.EventsFragment"
            android:label="events_fragment"
            tools:layout="@layout/events_fragment">
        <action
                android:id="@+id/action_eventsFragment_to_eventFragment"
                app:destination="@id/eventFragment" />
        <argument
                android:name="ARG_EVENT"
                app:argType="br.com.angelorobson.alternativescene.domain.Event" />
    </fragment>
    <fragment
            android:id="@+id/eventFragment"
            android:name="br.com.angelorobson.alternativescene.application.partials.events.event.EventFragment"
            android:label="event_fragment"
            tools:layout="@layout/event_fragment">
        <action
                android:id="@+id/action_eventFragment_to_eventImageFragment"
                app:destination="@id/eventImageFragment" />
        <argument
                android:name="ARG_EVENT"
                app:argType="br.com.angelorobson.alternativescene.domain.Event" />
    </fragment>
    <fragment
            android:id="@+id/signUpFragment"
            android:name="br.com.angelorobson.alternativescene.application.partials.auth.signUp.SignUpFragment"
            android:label="sign_up_fragment"
            tools:layout="@layout/sign_up_fragment" />
    <fragment
            android:id="@+id/eventImageFragment"
            android:name="br.com.angelorobson.alternativescene.application.partials.events.eventimage.EventImageFragment"
            android:label="fragment_event_image"
            tools:layout="@layout/event_image_fragment" />
</navigation>